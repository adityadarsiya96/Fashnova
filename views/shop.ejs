<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>FashNova - Shop</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-slate-950 text-white">
  <div class="p-6 max-w-7xl mx-auto">

   
    <div class="sticky top-0 z-50 bg-slate-900 p-4 ">
      <div class="flex flex-col md:flex-row md:justify-between md:items-center gap-6 mb-8">

        
        <div class="flex flex-col md:flex-row items-start md:items-center gap-8">
          <h1
            class="text-4xl font-bold bg-gradient-to-r from-purple-500 via-indigo-500 to-blue-500 text-transparent bg-clip-text">
            Fashnova
          </h1>
          <nav class="flex gap-6 text-lg">
            <a class="hover:text-purple-400 transition" href="#">Shop</a>
            <a class="hover:text-purple-400 transition" href="#">Cart</a>
            <a class="hover:text-purple-400 transition" href="#">My Account</a>
            <a class="text-rose-400 font-semibold hover:underline" href="/logout">Logout</a>
          </nav>
        </div>
      </div>
  
      <form action="/shop" method="GET" class="flex items-center gap-2">
        <label class="font-semibold">Sort by:</label>
        <select name="sortby" class="px-3 py-1 bg-white text-black rounded shadow focus:outline-none">
          <option value="populer">Popular</option>
          <option value="newest">Newest</option>
        </select>
      </form>
    </div>

   
    <div class="flex gap-10 text-lg mb-8 border-b border-gray-500 pb-3">
      <a href="#" class="hover:text-indigo-300 transition">New Collection</a>
      <a href="#" class="hover:text-indigo-300 transition">All Products</a>
      <a href="#" class="hover:text-indigo-300 transition">Discounted Products</a>
    </div>

    
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
      <% products.forEach(function(product) { %>
        <div class="bg-zinc-800 rounded-lg shadow-lg overflow-hidden hover:scale-[1.02] transition-transform">

          
          <div class="h-60 w-full overflow-hidden flex items-center justify-center bg-zinc-900">
            <img class="object-cover h-full w-full" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
              alt="Product Image">
          </div>

          
          <div class="p-4 text-white">
            <h3 class="text-xl font-semibold mb-1">
              <%= product.name %>
            </h3>
            <p class="text-gray-300 mb-3">â‚¹<%= product.price %>
            </p>
            <div class="flex justify-end">
              <a href="/buynow/<%= product._id %>"
                class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-1 rounded-md text-sm font-medium transition">
                Buy Now
              </a>
            </div>
          </div>

        </div>
        <% }) %>
    </div>
  </div>
</body>

</html>